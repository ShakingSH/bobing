/* wxml初始化布局 */  
.container {  
    width: 100%;  
    height: 100%;  
    background-color: wheat;  
}  
 
.main {  
    width: 100%;  
    margin: 0 auto;  
}  
 
.bowl {  
    text-align: center;  
    width: 78%;  
}  
 
.bg_img {  
    margin: 20%;  
    margin-left: 0%;  
}  
 
.btn-box {  
    text-align: center;  
}  
 
.btn-box .btn {  
    background: red;  
    color: #ffffff;  
    border: none;  
    border-radius: 10px;  
    padding: 10px 20px;  
}  
 
/* 骰子动画 */  
#redpacket0,  
#redpacket1,  
#redpacket2,  
#redpacket3,  
#redpacket4,  
#redpacket5 {  
    top:0px;  
    left: 0px;  
    width: 10%;  
    height: 10%;  
    position: absolute;  
}  